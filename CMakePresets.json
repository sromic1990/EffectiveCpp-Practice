{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "project-files/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },

    {
      "name": "windows-vs-debug",
      "inherits": "base",
      "displayName": "Windows - Visual Studio (Debug)",
      "description": "Configure using VS generator (multi-config), build Debug",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "project-files/windows-vs",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-vs-release",
      "inherits": "windows-vs-debug",
      "displayName": "Windows - Visual Studio (Release)",
      "description": "Configure using VS generator (multi-config), build Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "ninja-debug",
      "inherits": "base",
      "displayName": "Ninja - Debug",
      "description": "Generic Ninja Debug config (good for CLion/macOS)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "ninja-release",
      "inherits": "base",
      "displayName": "Ninja - Release",
      "description": "Generic Ninja Release config",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "windows-vs-debug",
      "configurePreset": "windows-vs-debug",
      "configuration": "Debug"
    },
    {
      "name": "windows-vs-release",
      "configurePreset": "windows-vs-release",
      "configuration": "Release"
    },
    {
      "name": "ninja-debug",
      "configurePreset": "ninja-debug"
    },
    {
      "name": "ninja-release",
      "configurePreset": "ninja-release"
    }
  ],

  "testPresets": [
    {
      "name": "ninja-debug-tests",
      "configurePreset": "ninja-debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}